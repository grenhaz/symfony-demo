{% extends 'layout/base.html.twig' %}

{% block content %}
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="#">{% trans %}APP.TITLE{% endtrans %}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_index') }}">{% trans %}INDEX{% endtrans %}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_movies') }}">{% trans %}MOVIES{% endtrans %}</a>
                    </li>
                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">{% trans %}LOGIN{% endtrans %}</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">{% trans %}LOGOUT{% endtrans %} <small>({{ app.user.username }})</small></a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </header>

    <div class="main-container">
        {% block page_contents %}{% endblock %}
    </div>
{% endblock %}
